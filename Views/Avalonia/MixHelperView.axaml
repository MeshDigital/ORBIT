<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="600"
             x:Class="SLSKDONET.Views.Avalonia.MixHelperView"
             x:DataType="vm:LibraryViewModel">
    
    <Border Background="#252526" BorderBrush="#3E3E42" BorderThickness="1,0,0,0">
        <Grid RowDefinitions="Auto,Auto,*,Auto">
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#2D2D30" Padding="16,12" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="ðŸ§©" FontSize="18" VerticalAlignment="Center"/>
                    <TextBlock Text="MIX HELPER" FontWeight="Bold" FontSize="12" LetterSpacing="1" VerticalAlignment="Center" Foreground="#CCC"/>
                </StackPanel>
            </Border>

            <!-- Seed Track Info -->
            <Border Grid.Row="1" Margin="12" Padding="12" Background="#1E1E1E" CornerRadius="8" BorderBrush="#3E3E42" BorderThickness="1">
                <StackPanel Spacing="8">
                    <TextBlock Text="CURRENT SEED" FontSize="10" FontWeight="Bold" Foreground="#666"/>
                    <TextBlock Text="{Binding MixHelperSeedTrack.DisplayName, FallbackValue='No Track Selected'}" 
                               FontWeight="SemiBold" TextWrapping="Wrap" MaxLines="2"/>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="â±ï¸" Opacity="0.5"/>
                            <TextBlock Text="{Binding MixHelperSeedTrack.BPM, StringFormat=\{0:F0\}}" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="ðŸŽ¹" Opacity="0.5"/>
                            <TextBlock Text="{Binding MixHelperSeedTrack.Key}" FontSize="12" Foreground="#3FB950"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Matches List -->
            <ScrollViewer Grid.Row="2">
                <ItemsControl ItemsSource="{Binding HarmonicMatches}" Margin="12,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:HarmonicMatchViewModel">
                            <Border Margin="0,0,0,8" Padding="12" Background="#2D2D30" CornerRadius="6"
                                    BorderBrush="#3E3E42" BorderThickness="1">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding TrackDisplay}" FontWeight="Medium" FontSize="13" TextWrapping="Wrap"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                            <Border Background="#333" Padding="6,2" CornerRadius="4">
                                                <TextBlock Text="{Binding Track.MusicalKey}" FontSize="11" Foreground="#3FB950"/>
                                            </Border>
                                            <TextBlock Text="{Binding Track.BPM, StringFormat=\{0:F0\} BPM}" FontSize="11" VerticalAlignment="Center" Opacity="0.7"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding RelationshipIcon}" FontSize="18" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding ScoreDisplay}" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#3FB950"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Status/Footer -->
            <Border Grid.Row="3" Padding="12" Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Matches based on Key &amp; BPM" FontSize="11" Foreground="#666" VerticalAlignment="Center"/>
                    <ProgressBar Grid.Column="1" IsIndeterminate="True" Width="60" Height="2" 
                                 IsVisible="{Binding IsLoadingMatches}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
