<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels.Downloads;assembly=ORBIT"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="60"
             x:Class="SLSKDONET.Views.Avalonia.Controls.StandardTrackRow"
             x:DataType="vm:UnifiedTrackViewModel">
             
    <UserControl.Styles>
        <Style Selector="Button.ActionBtn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.ActionBtn:hover">
            <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Integrity Badge Styles -->
        <Style Selector="Border.IntegrityBadge">
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="Padding" Value="4,1"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="Border.IntegrityBadge.Secure">
            <Setter Property="Background" Value="#2000FF00"/>
            <Setter Property="BorderBrush" Value="#00FF00"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style Selector="Border.IntegrityBadge.Suspect">
            <Setter Property="Background" Value="#20FFD700"/>
            <Setter Property="BorderBrush" Value="#FFD700"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style Selector="Border.PrepBadge">
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="Padding" Value="4,1"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Styles>

    <Border Background="{DynamicResource BackgroundBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="0,0,0,1" 
            Padding="8,6">
            
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Play" Command="{Binding PlayCommand}" IsVisible="{Binding IsCompleted}">
                    <MenuItem.Icon>
                        <PathIcon Data="{StaticResource play_circle_regular}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Show in Explorer" Command="{Binding RevealFileCommand}" IsVisible="{Binding IsCompleted}">
                    <MenuItem.Icon>
                        <PathIcon Data="{StaticResource folder_open_regular}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Add to Project" Command="{Binding AddToProjectCommand}" IsVisible="{Binding IsCompleted}">
                    <MenuItem.Icon>
                        <PathIcon Data="{StaticResource add_circle_regular}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <MenuItem Header="Find Similar (Sonic Twin)" Command="{Binding FindSimilarCommand}" IsVisible="{Binding IsCompleted}">
                    <MenuItem.Icon>
                        <PathIcon Data="{StaticResource radar_regular}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Find Similar (AI)" Command="{Binding FindSimilarAiCommand}" IsVisible="{Binding IsCompleted}">
                    <MenuItem.Icon>
                        <PathIcon Data="{StaticResource brain_circuit_regular}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <Separator IsVisible="{Binding IsCompleted}"/>
                
                <MenuItem Header="Retry Download" Command="{Binding RetryCommand}" IsVisible="{Binding IsFailed}">
                    <MenuItem.Icon>
                        <PathIcon Data="{StaticResource arrow_counterclockwise_regular}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <MenuItem Header="Pause" Command="{Binding PauseCommand}" IsVisible="{Binding IsActive}">
                     <MenuItem.Icon>
                        <PathIcon Data="{StaticResource pause_regular}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                 <MenuItem Header="Resume" Command="{Binding ResumeCommand}" IsVisible="{Binding IsPaused}">
                     <MenuItem.Icon>
                        <PathIcon Data="{StaticResource play_regular}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <MenuItem Header="Cancel" Command="{Binding CancelCommand}" IsVisible="{Binding IsActive}">
                     <MenuItem.Icon>
                        <PathIcon Data="{StaticResource dismiss_regular}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <Separator/>
                
                <MenuItem Header="Remove from List" Command="{Binding CleanCommand}" InputGesture="Delete">
                    <MenuItem.Icon>
                        <PathIcon Data="{StaticResource delete_regular}" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                
                <!-- Phase 7: Forensic Duplication -->
                <MenuItem Header="Delete &amp; Blacklist (Use with Caution!)" Command="{Binding DeleteAndBlacklistCommand}" IsVisible="{Binding IsCompleted}">
                    <MenuItem.Icon>
                        <PathIcon Data="{StaticResource shield_dismiss_regular}" Width="16" Height="16" Foreground="#FF4444"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </Border.ContextMenu>
            
        <Grid ColumnDefinitions="50, 12, *, Auto" RowDefinitions="Auto, Auto">
        
            <!-- Column 0: Album Art / Status Icon -->
            <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" 
                    Width="48" Height="48" 
                    CornerRadius="4" ClipToBounds="True" Background="{DynamicResource SurfaceBrush}">
                <Panel>
                    <!-- Actual Image -->
                    <Image Source="{Binding Artwork.Image}" 
                           Stretch="UniformToFill"
                           IsVisible="{Binding Artwork.Image, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                           
                    <!-- Placeholder/Status Overlay if no art or if downloading -->
                    <PathIcon Data="{StaticResource music_regular}" 
                              Foreground="{DynamicResource TextTertiaryBrush}" 
                              Width="24" Height="24"
                              IsVisible="{Binding AlbumArtUrl, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
                              
                    <!-- Download Progress Overlay (Circular) -->
                    <Arc Width="40" Height="40"
                         StartAngle="-90"
                         SweepAngle="{Binding Progress, Converter={StaticResource PercentageToAngleConverter}}"
                         Stroke="#00BFFF" StrokeThickness="3"
                         IsVisible="{Binding IsActive}"
                         Opacity="0.8"/>
                </Panel>
            </Border>
            
            <!-- Health Bar (Traffic Light) -->
            <Rectangle Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                       Width="4" HorizontalAlignment="Left"
                       Fill="{Binding QualityColor}"
                       RadiusX="2" RadiusY="2"
                       IsVisible="{Binding IsCompleted}"/>
            
            <!-- Column 1: Spacer -->
            
            <!-- Column 2: Main Content -->
            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" Spacing="2">
                <!-- Line 1: Artist - Title -->
                <StackPanel Orientation="Horizontal" Spacing="6">
                   <TextBlock Text="{Binding ArtistName}" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" FontSize="14" TextTrimming="CharacterEllipsis"/>
                   <TextBlock Text="-" Foreground="{DynamicResource TextTertiaryBrush}"/>
                   <TextBlock Text="{Binding TrackTitle}" Foreground="{DynamicResource TextBrush}" FontSize="14" TextTrimming="CharacterEllipsis"/>
                   
                   <!-- Curation Trust Badge (Phase 11.5) -->
                   <Border CornerRadius="2" Padding="4,1" Margin="0,0,6,0" VerticalAlignment="Center" 
                           BorderThickness="1" BorderBrush="{Binding CurationColor}"
                           IsVisible="{Binding CurationIcon, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                           ToolTip.Tip="{Binding ProvenanceTooltip}">
                       <TextBlock Text="{Binding CurationIcon}" FontSize="10" VerticalAlignment="Center"/>
                   </Border>

                   <!-- Integrity Check Badge -->
                   <Border Classes="IntegrityBadge Secure" IsVisible="{Binding IsSecure}">
                       <TextBlock Text="âœ“ VERIFIED" FontSize="9" FontWeight="Bold" Foreground="#00FF00"/>
                   </Border>

                   <!-- Discovery Match Badge (Phase 4+) -->
                   <Border Background="#209C27B0" CornerRadius="2" Padding="4,1" Margin="0,0,6,0" VerticalAlignment="Center"
                           BorderBrush="#9C27B0" BorderThickness="1"
                           IsVisible="{Binding DiscoveryReason, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                       <StackPanel Orientation="Horizontal" Spacing="4">
                           <TextBlock Text="âœ¨" FontSize="10" VerticalAlignment="Center"/>
                           <TextBlock Text="{Binding DiscoveryReason}" FontSize="9" FontWeight="Bold" Foreground="#D05CE3" VerticalAlignment="Center"/>
                       </StackPanel>
                   </Border>

                   <!-- Preparation Badge (Phase 10) -->
                   <Border Classes="PrepBadge" 
                           Background="{Binding PreparationColor}" 
                           Opacity="0.8"
                           IsVisible="{Binding IsCompleted}">
                       <TextBlock Text="{Binding PreparationStatus}" FontSize="8" FontWeight="Bold" Foreground="White"/>
                   </Border>
                   
                   <!-- Primary Genre Tag (Pill) -->
                   <Border Background="{DynamicResource TertiaryBackgroundBrush}" CornerRadius="10" Padding="8,1" IsVisible="{Binding PrimaryGenre, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                       <TextBlock Text="{Binding PrimaryGenre}" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" FontWeight="SemiBold"/>
                   </Border>

                   <!-- Year Tag (Pill) -->
                   <Border Background="#1AFFFFFF" CornerRadius="10" Padding="8,1" IsVisible="{Binding YearDisplay, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                       <TextBlock Text="{Binding YearDisplay}" FontSize="10" Foreground="#AAA" FontWeight="SemiBold"/>
                   </Border>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <!-- Line 2: Tech Specs & Curation Data -->
                
                <!-- Status/Speed -->
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <TextBlock Text="âš ï¸" IsVisible="{Binding IsFailed}" Foreground="OrangeRed" FontSize="12" ToolTip.Tip="{Binding DetailedStatusText}"/>
                    <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusColor}" FontSize="11" FontWeight="Medium" 
                               TextTrimming="CharacterEllipsis" MaxWidth="200"
                               ToolTip.Tip="{Binding DetailedStatusText}"/>
                </StackPanel>
                
                <TextBlock Text="â€¢" Foreground="{DynamicResource TextTertiaryBrush}"/>
                
                <!-- Tech Summary & Quality Badge -->
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="3" Padding="4,0" 
                            ToolTip.Tip="{Binding Model.Bitrate, StringFormat='{}Bitrate: {0}kbps'}">
                        <TextBlock Text="{Binding QualityIcon}" FontSize="12" VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Text="{Binding TechnicalSummary}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11" FontFamily="Consolas" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- NEW: Duration (only show if completed) -->
                                <TextBlock Text="â€¢" Foreground="{DynamicResource TextTertiaryBrush}" IsVisible="{Binding IsCompleted}"/>
                <StackPanel Orientation="Horizontal" Spacing="4" IsVisible="{Binding IsCompleted}">
                    <TextBlock Text="â±" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}"/>
                    <TextBlock Text="{Binding Duration}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11" FontFamily="Consolas"/>
                </StackPanel>
                
                <!-- NEW: File Size (only show if completed) -->
                                <TextBlock Text="â€¢" Foreground="{DynamicResource TextTertiaryBrush}" IsVisible="{Binding IsCompleted}"/>
                <StackPanel Orientation="Horizontal" Spacing="4" IsVisible="{Binding IsCompleted}">
                    <TextBlock Text="ðŸ’¾" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}"/>
                    <TextBlock Text="{Binding FileSizeDisplay}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11" FontFamily="Consolas"/>
                </StackPanel>
                
                                <TextBlock Text="â€¢" Foreground="{DynamicResource TextTertiaryBrush}" IsVisible="{Binding IsCompleted}"/>
                
                <!-- BPM/Key Pills -->
                <StackPanel Orientation="Horizontal" Spacing="6" IsVisible="{Binding IsCompleted}">
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="10" Padding="8,1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <TextBlock Text="{Binding BpmDisplay}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11" FontFamily="Consolas" FontWeight="Bold"/>
                    </Border>
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="10" Padding="8,1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                         <TextBlock Text="{Binding KeyDisplay}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11" FontFamily="Consolas" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <!-- Column 3: Action Zone -->
            <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
            
                <!-- PLAY BUTTON (Success only) -->
                <Button Classes="ActionBtn" Command="{Binding PlayCommand}" IsVisible="{Binding IsCompleted}" ToolTip.Tip="Play Now">
                    <PathIcon Data="{StaticResource play_circle_regular}" Width="20" Height="20" Foreground="#00BFFF"/>
                </Button>
                
                <!-- REVEAL BUTTON (Success only) -->
                 <Button Classes="ActionBtn" Command="{Binding RevealFileCommand}" IsVisible="{Binding IsCompleted}" ToolTip.Tip="Show in Explorer">
                    <PathIcon Data="{StaticResource folder_open_regular}" Width="18" Height="18"/>
                </Button>
                
                 <!-- ADD TO PROJECT (Success only) -->
                 <Button Classes="ActionBtn" Command="{Binding AddToProjectCommand}" IsVisible="{Binding IsCompleted}" ToolTip.Tip="Add to Project">
                    <PathIcon Data="{StaticResource add_circle_regular}" Width="18" Height="18"/>
                </Button>
                
                <!-- CANCEL/PAUSE (Active only) -->
                <Button Classes="ActionBtn" Command="{Binding PauseCommand}" IsVisible="{Binding IsActive}" ToolTip.Tip="Pause">
                    <PathIcon Data="{StaticResource pause_regular}" Width="16" Height="16"/>
                </Button>
                
                 <Button Classes="ActionBtn" Command="{Binding CancelCommand}" IsVisible="{Binding IsActive}" ToolTip.Tip="Cancel">
                    <PathIcon Data="{StaticResource dismiss_regular}" Width="16" Height="16" Foreground="#FF6666"/>
                </Button>
                
                <!-- RETRY (Failed only) -->
                <Button Classes="ActionBtn" Command="{Binding RetryCommand}" IsVisible="{Binding IsFailed}" ToolTip.Tip="Retry">
                    <PathIcon Data="{StaticResource arrow_counterclockwise_regular}" Width="16" Height="16"/>
                </Button>

            </StackPanel>
            
        </Grid>
    </Border>
</UserControl>
