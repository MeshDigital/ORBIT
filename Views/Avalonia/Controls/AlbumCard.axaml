<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="380"
             x:Class="SLSKDONET.Views.Avalonia.Controls.AlbumCard">
    
    <Border Background="#2D2D2D" 
            CornerRadius="8" 
            BorderBrush="#3E3E3E" 
            BorderThickness="1"
            ClipToBounds="True"
            Margin="0,0,16,16"
            Width="240"
            MinHeight="360"
            MaxHeight="400">
        
        <!-- Use Auto rows to prevent compression -->
        <Grid RowDefinitions="220,Auto,Auto">
            <!-- Top: Cover Art (Fixed Height) -->
            <Border Grid.Row="0" Width="240" Height="220" Background="#1E1E1E">
                <Panel>
                    <PathIcon Data="{StaticResource icons_library}" 
                             Width="64" Height="64" 
                             Foreground="#333"
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                    
                    <!-- Stats Overlay -->
                    <Border Background="#CC000000" VerticalAlignment="Bottom" Padding="8,4">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{Binding QualitySummary}" 
                                      FontSize="11" 
                                      Foreground="#DDD" 
                                      TextTrimming="CharacterEllipsis"/>
                            <TextBlock Grid.Column="1" 
                                      Text="{Binding MatchConfidence, StringFormat='{}{0}% Match'}" 
                                      FontSize="11" 
                                      Foreground="#4EC9B0" 
                                      Margin="4,0,0,0"
                                      IsVisible="{Binding MatchConfidence, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                        </Grid>
                    </Border>
                </Panel>
            </Border>
            
            <!-- Middle: Details (Auto Height with Min/Max constraints) -->
            <StackPanel Grid.Row="1" 
                       Margin="12,12,12,8"
                       MinHeight="80"
                       MaxHeight="120">
                <TextBlock Text="{Binding AlbumTitle}" 
                          FontWeight="Bold" 
                          FontSize="14" 
                          Foreground="White"
                          TextTrimming="CharacterEllipsis"
                          MaxLines="2"
                          TextWrapping="Wrap"/>
                
                <TextBlock Text="{Binding Artist}" 
                          FontSize="12" 
                          Foreground="#AAA" 
                          TextTrimming="CharacterEllipsis" 
                          MaxLines="1"
                          Margin="0,4,0,0"/>
                
                <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,8,0,0">
                    <Border Background="#333" CornerRadius="4" Padding="6,3">
                        <TextBlock Text="{Binding TrackCount, StringFormat='{}{0} tracks'}" 
                                  FontSize="10" 
                                  Foreground="#888"/>
                    </Border>
                    <Border Background="#333" CornerRadius="4" Padding="6,3">
                        <TextBlock Text="{Binding TotalSizeMb, StringFormat='{}{0:F0} MB'}" 
                                  FontSize="10" 
                                  Foreground="#888"/>
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <!-- Bottom: Actions (Auto Height) -->
            <Button Grid.Row="2" 
                    Command="{Binding DownloadAlbumCommand}"
                    Classes="primary"
                    HorizontalAlignment="Stretch" 
                    CornerRadius="0,0,8,8"
                    Padding="12,12"
                    BorderThickness="0"
                    Background="#4CAF50"
                    Foreground="White">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                    <TextBlock Text="⬇️" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="Download Album" FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Border>
</UserControl>
