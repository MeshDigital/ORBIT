<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels"
             xmlns:conv="clr-namespace:SLSKDONET.Converters"
             xmlns:controls="clr-namespace:SLSKDONET.Views.Avalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.AnalysisQueuePage"
             Background="#1E1E1E" Foreground="White">

    <UserControl.Resources>
        <conv:StatusToColorConverter x:Key="StatusColorConverter"/>
    </UserControl.Resources>

    <Grid>
        <!-- MASTER VIEW: Analysis Queue -->
        <Grid RowDefinitions="Auto,Auto,Auto,*,Auto,*,Auto,200" IsVisible="{Binding !IsLabModeActive}">
            
            <!-- Header -->
            <Border Grid.Row="0" Margin="32,32,32,16">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" Spacing="8">
                        <TextBlock Text="Analysis Queue - Mission Control" FontSize="28" FontWeight="Bold"/>
                        <TextBlock Text="Real-time monitoring of parallel audio analysis processing" Foreground="#888"/>
                        <TextBlock Text="{Binding TestStatus}" Foreground="#00D9FF" FontSize="12" Margin="0,4,0,0"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="ðŸ§  Test Brain" 
                            Command="{Binding RunBrainTestCommand}"
                            FontSize="14" Padding="20,12" 
                            Background="#252526" BorderBrush="#00D9FF" BorderThickness="2"
                            Foreground="White" FontWeight="Bold" CornerRadius="8"
                            VerticalAlignment="Top"/>
                </Grid>
            </Border>

            <!-- Mission Control: Thread Activity Grid -->
            <Grid Grid.Row="1" Margin="32,0,32,16" RowDefinitions="Auto,Auto">
                <Grid ColumnDefinitions="*,250" Margin="0,0,0,8">
                    <TextBlock Grid.Column="0" Text="ðŸ§µ THREAD ACTIVITY" FontSize="12" FontWeight="Bold" Foreground="#00D9FF" />
                    <TextBlock Grid.Column="1" Text="ðŸ•µï¸ LIVE FORENSIC STREAM" FontSize="12" FontWeight="Bold" Foreground="#FFA500" HorizontalAlignment="Right"/>
                </Grid>
                
                <Grid Grid.Row="1" ColumnDefinitions="2*, 8, 1*">
                    <!-- Threads -->
                    <DataGrid Grid.Column="0" ItemsSource="{Binding ActiveThreads}" AutoGenerateColumns="False" 
                              CanUserResizeColumns="True" Background="#252526" BorderThickness="0" CornerRadius="8" MaxHeight="250">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Thread" Binding="{Binding ThreadId}" Width="60"/>
                            <DataGridTemplateColumn Header="Status" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Status}" 
                                                  Foreground="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                                  FontWeight="Bold"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Track" Binding="{Binding CurrentTrack}" Width="*"/>
                            <DataGridTemplateColumn Header="Progress" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ProgressBar Value="{Binding Progress}" Maximum="100" Height="10" 
                                                    Foreground="#00D9FF" Background="#333" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Time" Binding="{Binding ElapsedTime}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Live Logs -->
                    <Border Grid.Column="2" Background="#111" CornerRadius="8" BorderBrush="#333" BorderThickness="1">
                        <ScrollViewer>
                            <ItemsControl ItemsSource="{Binding LiveForensicLogs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LogText}" FontFamily="Consolas, Monospace" FontSize="11" 
                                                  Foreground="{Binding LogColor}" TextWrapping="Wrap" Margin="4,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>

            <!-- Mission Control: Metrics Footer -->
            <Border Grid.Row="2" Background="#252526" Padding="16,12" Margin="32,0" CornerRadius="8">
                <Grid ColumnDefinitions="*,*,*">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ“Š Throughput:" FontWeight="Bold" Foreground="#888"/>
                        <TextBlock Text="{Binding TracksPerMinute, StringFormat='{}{0:F1} tracks/min'}" 
                                  FontSize="14" FontWeight="Bold" Foreground="#00D9FF"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <TextBlock Text="âœ… Processed:" FontWeight="Bold" Foreground="#888"/>
                        <TextBlock Text="{Binding TotalProcessed}" 
                                  FontSize="14" FontWeight="Bold" Foreground="#1DB954"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                        <TextBlock Text="â±ï¸ ETA:" FontWeight="Bold" Foreground="#888"/>
                        <TextBlock Text="{Binding EstimatedCompletion}" 
                                  FontSize="14" FontWeight="Bold" Foreground="#FFA500"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Active Jobs -->
            <Grid Grid.Row="3" Margin="32,16,32,16" RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="ACTIVE PROCESSING" FontSize="12" FontWeight="Bold" Foreground="#4EC9B0" Margin="0,0,0,8"/>
                <DataGrid Grid.Row="1" ItemsSource="{Binding ActiveJobs}" AutoGenerateColumns="False" CanUserResizeColumns="True" Background="#252526" BorderThickness="0" CornerRadius="8">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        <DataGridTextColumn Header="Step" Binding="{Binding Step}" Width="180"/>
                        <DataGridTemplateColumn Header="Progress" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="6" VerticalAlignment="Center" Margin="8,0" Foreground="#4EC9B0" Background="#333"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Row="4" Background="#333" Height="1" HorizontalAlignment="Stretch" Margin="32,0"/>

            <!-- Completed Jobs -->
            <Grid Grid.Row="5" Margin="32,16,32,16" RowDefinitions="Auto,*">
                <TextBlock Grid.Row="0" Text="RECENTLY COMPLETED" FontSize="12" FontWeight="Bold" Foreground="#1DB954" Margin="0,0,0,8"/>
                <DataGrid Grid.Row="1" ItemsSource="{Binding CompletedJobs}" AutoGenerateColumns="False" CanUserResizeColumns="True" Background="#252526" BorderThickness="0" CornerRadius="8">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        <DataGridTextColumn Header="Time" Binding="{Binding Age}" Width="100"/>
                        <DataGridTemplateColumn Header="Actions" Width="120">
                             <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Inspect" 
                                            Command="{Binding $parent[UserControl].DataContext.InspectTrackCommand}" 
                                            CommandParameter="{Binding}"
                                            FontSize="11" Padding="12,4" Margin="4"
                                            Classes="accent"/>
                                </DataTemplate>
                             </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
            <!-- Splitter -->
            <GridSplitter Grid.Row="6" Background="#333" Height="1" HorizontalAlignment="Stretch" Margin="32,0"/>

            <!-- Failed Jobs -->
            <Grid Grid.Row="7" Margin="32,16,32,32" RowDefinitions="Auto,*">
                 <TextBlock Grid.Row="0" Text="FAILED / ERRORS" FontSize="12" FontWeight="Bold" Foreground="#F44336" Margin="0,0,0,8"/>
                 <DataGrid Grid.Row="1" ItemsSource="{Binding FailedJobs}" AutoGenerateColumns="False" CanUserResizeColumns="True" Background="#252526" BorderThickness="0" CornerRadius="8">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*"/>
                        <DataGridTextColumn Header="Error" Binding="{Binding Error}" Width="2*"/>
                        <DataGridTextColumn Header="Time" Binding="{Binding Age}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <!-- DETAIL VIEW: Forensic Lab Dashboard -->
        <Grid IsVisible="{Binding IsLabModeActive}" Background="#1E1E1E">
            <Grid RowDefinitions="Auto,*" DataContext="{Binding LabViewModel}">
                <!-- Lab Header / Back Navigation -->
                <Border Grid.Row="0" Background="#111" BorderBrush="#333" BorderThickness="0,0,0,1" Padding="16">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Button Content="â† Back to Mission Control" 
                                Command="{Binding $parent[UserControl].DataContext.CloseLabCommand}"
                                FontSize="14" FontWeight="Bold" Foreground="#888" Background="Transparent" BorderThickness="0"/>
                        
                        <TextBlock Grid.Column="1" Text="{Binding DisplayName}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontSize="16" FontWeight="Bold" Foreground="White"
                                   TextTrimming="CharacterEllipsis"/>
                        
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                             <TextBlock Text="{Binding TrackUniqueHash}" FontFamily="Consolas" Foreground="#444" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- The Dashboard Control -->
                <controls:ForensicLabDashboard Grid.Row="1"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
