<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SLSKDONET.Views.Avalonia.SearchPage"
             Background="#1E1E1E" Foreground="White">
    <Border Padding="16">
        <Grid RowDefinitions="Auto,*,Auto">
        <!-- Search Controls -->
        <StackPanel Orientation="Vertical" Spacing="12" Grid.Row="0">
            <TextBlock Text="Search Soulseek" FontSize="20" FontWeight="Bold"/>
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0" Margin="0,0,8,0"
                         Watermark="Search for tracks, artists, albums..." 
                         Text="{Binding SearchQuery}"
                         Background="#252526" Foreground="White" Padding="12,8"/>
                <Button Grid.Column="1" Content="ðŸ” Search" Command="{Binding PerformSearchCommand}" 
                        Background="#0078D4" Foreground="White" Padding="16,8"/>
            </Grid>
        </StackPanel>

        <!-- Results Grid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding SearchResults}" Margin="0,12,0,0"
                  Background="#252526" Foreground="White" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="150"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="250"/>
                <DataGridTextColumn Header="Album" Binding="{Binding Album}" Width="200"/>
                <DataGridTextColumn Header="Length" Binding="{Binding Length}" Width="80"/>
                <DataGridTextColumn Header="Quality" Binding="{Binding Quality}" Width="80"/>
                <DataGridTemplateColumn Header="Action" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="â¬‡ï¸ Download" Command="{Binding DataContext.DownloadTrackCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}" Background="#0078D4" Foreground="White" Padding="8,4"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status -->
        <TextBlock Grid.Row="2" Text="{Binding SearchStatus}" Margin="0,12,0,0" Foreground="#A0A0A0" FontSize="12"/>
        </Grid>
    </Border>
</UserControl>
