<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ds="clr-namespace:DraggingService;assembly=Simple-Avalonia-DragnDrop-Service"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels"
             xmlns:controls="clr-namespace:SLSKDONET.Views.Avalonia.Controls"
             xmlns:views="clr-namespace:SLSKDONET.Views.Avalonia"
             xmlns:conv="clr-namespace:SLSKDONET.Views.Avalonia.Converters"
             xmlns:tree="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.TreeDataGrid"
             xmlns:rootConv="clr-namespace:SLSKDONET.Converters"
             xmlns:helpers="clr-namespace:SLSKDONET.Helpers"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.LibraryPage"
             x:DataType="vm:LibraryViewModel"
             Background="#1E1E1E" Foreground="White">

    <UserControl.Resources>
        <conv:BitmapValueConverter x:Key="BitmapValueConverter"/>
        <conv:RankColorConverter x:Key="RankColorConverter"/>
        <rootConv:BoolOpacityConverter x:Key="BoolOpacityConverter"/>
        <conv:BoolBlurConverter x:Key="BoolBlurConverter"/>
        <x:Double x:Key="NonDownloadedOpacity">0.3</x:Double>
    </UserControl.Resources>

    <Grid ColumnDefinitions="280,Auto,*,Auto,Auto,Auto,Auto">
        
        <!-- LEFT PANEL: Playlist List -->
        <Border Grid.Column="0" Background="#202020" BorderBrush="#3E3E3E" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*,Auto">
                
                <!-- Header / Tools -->
                <Grid Grid.Row="0" Margin="12,16,12,8" ColumnDefinitions="*,Auto">
                     <TextBlock Text="LIBRARY" FontSize="12" FontWeight="Bold" Foreground="#888" VerticalAlignment="Center"/>
                     
                     <DropDownButton Content="Tools" Classes="tool" CornerRadius="4" Padding="8,4" FontSize="12">
                         <DropDownButton.Flyout>
                             <MenuFlyout>
                                 <MenuItem Header="Import History" Command="{Binding ViewHistoryCommand}">
                                     <MenuItem.Icon>ðŸ“œ</MenuItem.Icon>
                                 </MenuItem>
                                 <MenuItem Header="Upgrade Scout (Soon)" Command="{Binding ToggleUpgradeScoutCommand}" IsEnabled="False" ToolTip.Tip="Feature coming in Phase 8">
                                     <MenuItem.Icon>ðŸ’Ž</MenuItem.Icon>
                                 </MenuItem>
                                 <MenuItem Header="New Smart Playlist" Command="{Binding Projects.AddPlaylistCommand}">
                                     <MenuItem.Icon>âš¡</MenuItem.Icon>
                                 </MenuItem>
                                 <MenuItem Header="Retry Offline Tracks" Command="{Binding Operations.RetryOfflineTracksCommand}">
                                     <MenuItem.Icon>ðŸ”„</MenuItem.Icon>
                                 </MenuItem>
                                 <Separator/>
                                 <MenuItem Header="Export Monthly Drop" Command="{Binding ExportMonthlyDropCommand}">
                                     <MenuItem.Icon>ðŸ“€</MenuItem.Icon>
                                 </MenuItem>
                             </MenuFlyout>
                         </DropDownButton.Flyout>
                     </DropDownButton>
                </Grid>

                <!-- Navigation List -->
                <ScrollViewer Grid.Row="1">
                    <StackPanel Spacing="2">
                        <!-- Pinned / Special -->
                        <ListBox ItemsSource="{Binding SmartPlaylists.SmartPlaylists}"
                                 SelectedItem="{Binding SmartPlaylists.SelectedSmartPlaylist, Mode=TwoWay}"
                                 Background="Transparent" BorderThickness="0" Padding="0" Margin="0,0,0,8">
                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="CornerRadius" Value="4"/>
                                    <Setter Property="Margin" Value="8,0"/>
                                </Style>
                            </ListBox.Styles>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <Border Width="24" Height="24" CornerRadius="4" Background="#333" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <!-- Actions as List Items -->
                        <Button Command="{Binding Projects.ImportLikedSongsCommand}" Classes="nav-item" Margin="8,0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="24" Height="24" CornerRadius="4" Background="#281111" VerticalAlignment="Center">
                                    <TextBlock Text="â¤ï¸" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Liked Songs" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding Projects.LoadAllTracksCommand}" Classes="nav-item" Margin="8,0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="24" Height="24" CornerRadius="4" Background="#111128" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“š" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="All Tracks" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Height="1" Background="#333" Margin="12,8"/>

                        <!-- Project Search -->
                        <Border Background="#2D2D2D" 
                                BorderBrush="#333" 
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="8,8,8,12"
                                Padding="10,2">
                            <Grid ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" 
                                          Text="ðŸ”" 
                                          FontSize="12" 
                                          VerticalAlignment="Center"
                                          Foreground="#666"/>
                                <TextBox Grid.Column="1"
                                        Text="{Binding Projects.SearchText, Mode=TwoWay}" 
                                        Watermark="Filter projects..." 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="12"
                                        Padding="8,6"
                                        Foreground="White"/>
                            </Grid>
                        </Border>

                        <!-- User Playlists -->
                        <TextBlock Text="PLAYLISTS" FontSize="11" FontWeight="Bold" Foreground="#666" Margin="16,0,16,8"/>
                        
                        <ListBox ItemsSource="{Binding Projects.FilteredProjects}" 
                                 SelectedItem="{Binding Projects.SelectedProject, Mode=TwoWay}"
                                 Background="Transparent" BorderThickness="0" Padding="0">
                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="8,2"/>
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </ListBox.Styles>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent">
                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Export to Rekordbox XML" 
                                                          Command="{Binding $parent[UserControl].DataContext.ExportPlaylistCommand}" 
                                                          CommandParameter="{Binding}">
                                                    <MenuItem.Icon>
                                                        <TextBlock Text="ðŸ“€"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Delete Playlist" 
                                                          Command="{Binding $parent[UserControl].DataContext.DeleteProjectCommand}" 
                                                          CommandParameter="{Binding}"
                                                          InputGesture="Delete">
                                                    <MenuItem.Icon>
                                                        <TextBlock Text="ðŸ—‘ï¸"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <controls:CompactPlaylistTemplate/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom Actions -->
                <StackPanel Grid.Row="2" Margin="12,12" Spacing="8">
                    <Button Command="{Binding Projects.AddPlaylistCommand}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="âž•"/>
                            <TextBlock Text="New Playlist"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding DeleteProjectCommand}" 
                            CommandParameter="{Binding SelectedProject}"
                            Classes="danger"
                            IsVisible="{Binding !!SelectedProject}"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
                         <TextBlock Text="Delete Project"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar Splitter -->
        <GridSplitter Grid.Column="1" Width="1" Background="#3E3E3E" HorizontalAlignment="Center"/>
        
        <!-- RIGHT PANEL: Track List -->
        <Grid Grid.Column="2" RowDefinitions="Auto,Auto,*">
            
            <!-- Toolbar -->
            <Border Grid.Row="0" Background="#252526" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1" Padding="20,16">
                <Grid ColumnDefinitions="*,Auto">
                    <!-- Left: Search and Filters -->
                    <!-- Left: Search and Filters -->
                    <Grid Grid.Column="0" ColumnDefinitions="*,Auto">
                        <!-- Modern Search Box -->
                        <Border Grid.Column="0"
                                Background="#2D2D2D" 
                                BorderBrush="#3E3E3E" 
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12,0"
                                HorizontalAlignment="Stretch"
                                MaxWidth="600"
                                Margin="0,0,16,0">
                            <Grid ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" 
                                          Text="ðŸ”" 
                                          FontSize="14" 
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"
                                          Foreground="#888"/>
                                <TextBox Grid.Column="1"
                                        Text="{Binding Tracks.SearchText, Mode=TwoWay}" 
                                        Watermark="Search tracks..." 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0,10"
                                        Foreground="White"/>
                            </Grid>
                        </Border>
                        
                        <!-- Chip-style Filters -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <ToggleButton Content="All" 
                                         IsChecked="{Binding Tracks.IsFilterAll, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                            <ToggleButton Content="Downloaded" 
                                         IsChecked="{Binding Tracks.IsFilterDownloaded, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                            <ToggleButton Content="Pending" 
                                         IsChecked="{Binding Tracks.IsFilterPending, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                            
                            <!-- Phase 15: Dynamic Style Filters -->
                            <ItemsControl ItemsSource="{Binding Tracks.StyleFilters}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="8"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ToggleButton Content="{Binding Style.Name}" 
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                      Classes="chip"
                                                      Padding="16,8"
                                                      BorderBrush="{Binding ColorBrush}"
                                                      BorderThickness="0,0,0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Right: Icon Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button Command="{Binding Tracks.SelectAllTracksCommand}"
                                Classes="icon-button"
                                IsVisible="{Binding Tracks.FilteredTracks.Count}"
                                ToolTip.Tip="Select All">
                            <TextBlock Text="â˜‘ï¸" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding Tracks.DeselectAllTracksCommand}"
                                Classes="icon-button"
                                IsVisible="{Binding Tracks.HasSelectedTracks}"
                                ToolTip.Tip="Deselect All">
                            <TextBlock Text="â˜" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding ToggleEditModeCommand}"
                                Classes="icon-button"
                                ToolTip.Tip="Toggle Edit Mode">
                            <TextBlock Text="âœï¸" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding RefreshLibraryCommand}"
                                Classes="icon-button"
                                ToolTip.Tip="Refresh Library">
                            <TextBlock Text="ðŸ”„" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Active Downloads HUD -->
            <Border Grid.Row="1" 
                    Background="#252526" 
                    BorderBrush="#3E3E3E" 
                    BorderThickness="0,0,0,1" 
                    Padding="16,12"
                    IsVisible="{Binding IsActiveDownloadsVisible}">
                <Grid RowDefinitions="Auto,Auto">
                    <!-- Header + Stats + Controls -->
                    <Grid ColumnDefinitions="*,Auto" Grid.Row="0">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                            <TextBlock Text="â¬‡ï¸ Downloads" FontWeight="Bold" FontSize="14" Foreground="White"/>
                            
                            <!-- Stats Pucks -->
                            <Border Background="#333" CornerRadius="10" Padding="8,2">
                                <TextBlock FontSize="12">
                                    <Run Text="{Binding MainViewModel.TodoCount}" Foreground="#4EC9B0" FontWeight="Bold"/>
                                    <Run Text=" active" Foreground="#AAA"/>
                                </TextBlock>
                            </Border>
                            
                            <Border Background="#333" CornerRadius="10" Padding="8,2" IsVisible="{Binding MainViewModel.FailedCount}">
                                <TextBlock FontSize="12">
                                    <Run Text="{Binding MainViewModel.FailedCount}" Foreground="#F44336" FontWeight="Bold"/>
                                    <Run Text=" failed" Foreground="#AAA"/>
                                </TextBlock>
                            </Border>
                            
                            <TextBlock Text="{Binding MainViewModel.DownloadProgressPercentage, StringFormat='{}{0:F0}%'}" 
                                       Foreground="#888" 
                                       VerticalAlignment="Center" 
                                       FontSize="12"/>
                        </StackPanel>
                        
                        <!-- Quick Actions -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Command="{Binding MainViewModel.ResumeAllDownloadsCommand}"
                                    Background="#2E7D32" 
                                    Foreground="White" 
                                    Padding="12,6" 
                                    CornerRadius="4" 
                                    ToolTip.Tip="Resume All Downloads"
                                    FontSize="12">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="â–¶"/>
                                    <TextBlock Text="Resume"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding MainViewModel.PauseAllDownloadsCommand}"
                                    Background="#EF6C00" 
                                    Foreground="White" 
                                    Padding="12,6" 
                                    CornerRadius="4" 
                                    ToolTip.Tip="Pause All Downloads"
                                    FontSize="12">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="â¸"/>
                                    <TextBlock Text="Pause"/>
                                </StackPanel>
                            </Button>
                            
                            <Border Width="1" Height="16" Background="#444" Margin="4,0"/>
                            
                            <Button Command="{Binding ToggleActiveDownloadsCommand}" 
                                    Background="Transparent" 
                                    Padding="8,6"
                                    Foreground="#888"
                                    ToolTip.Tip="Hide Panel">
                                <TextBlock Text="âœ•"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="1" 
                                 Margin="0,12,0,0" 
                                 Value="{Binding MainViewModel.DownloadProgressPercentage}" 
                                 Maximum="100" 
                                 Height="4" 
                                 Background="#333" 
                                 Foreground="#4EC9B0"
                                 CornerRadius="2"/>
                </Grid>
            </Border>

            <!-- Track List (UI Virtualized for 50k+ track support) -->
            <Grid Grid.Row="2">
                <ListBox ItemsSource="{Binding Tracks.FilteredTracks}"
                         SelectionMode="Multiple"
                         SelectedItems="{Binding Tracks.SelectedTracks}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="4"/>
                            <Setter Property="MinHeight" Value="72"/>  <!-- Allow expansion -->
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
                        </Style>
                        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                            <Setter Property="Background" Value="#1AFFFFFF"/>
                        </Style>
                    </ListBox.Styles>
                    
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="vm:PlaylistTrackViewModel">
                            <Border Background="Transparent" Padding="8,6">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Play" 
                                                  Command="{Binding $parent[UserControl].DataContext.Operations.PlayTrackCommand}" 
                                                  CommandParameter="{Binding}">
                                            <MenuItem.Icon>
                                                <TextBlock Text="â–¶ï¸"/>
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <MenuItem Header="Analyze Track" 
                                                  Command="{Binding $parent[UserControl].DataContext.AnalyzeTrackCommand}" 
                                                  CommandParameter="{Binding}">
                                            <MenuItem.Icon>
                                                <TextBlock Text="ðŸ”¬"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        
                                        <MenuItem Header="Open File Location" 
                                                  Command="{Binding $parent[UserControl].DataContext.Operations.OpenFolderCommand}" 
                                                  CommandParameter="{Binding}">
                                             <MenuItem.Icon>
                                                <TextBlock Text="ðŸ“‚"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        
                                        <Separator/>
                                        
                                        <MenuItem Header="Retry Download" 
                                                  Command="{Binding $parent[UserControl].DataContext.Operations.HardRetryCommand}" 
                                                  CommandParameter="{Binding}"
                                                  IsVisible="{Binding CanHardRetry}">
                                             <MenuItem.Icon>
                                                <TextBlock Text="ðŸ”„"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                                  
                                         <MenuItem Header="Cancel" 
                                                  Command="{Binding CancelCommand}" 
                                                  IsVisible="{Binding CanCancel}">
                                             <MenuItem.Icon>
                                                <TextBlock Text="âœ•"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        
                                        <Separator/>
                                        
                                        <MenuItem Header="Remove from Library" 
                                                  Command="{Binding $parent[UserControl].DataContext.Operations.RemoveTrackCommand}" 
                                                  CommandParameter="{Binding}"
                                                  InputGesture="Delete">
                                             <MenuItem.Icon>
                                                <TextBlock Text="ðŸ—‘ï¸"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        
                                        <MenuItem Header="Find Harmonic Matches" 
                                                  Command="{Binding $parent[UserControl].DataContext.FindHarmonicMatchesCommand}" 
                                                  CommandParameter="{Binding}">
                                             <MenuItem.Icon>
                                                <TextBlock Text="ðŸŽ¹"/>
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <MenuItem Header="Analyze Track" 
                                                  Command="{Binding $parent[UserControl].DataContext.AnalyzeTrackCommand}" 
                                                  CommandParameter="{Binding}">
                                             <MenuItem.Icon>
                                                <TextBlock Text="ðŸ”¬"/>
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <MenuItem Header="Analyze Album" 
                                                  Command="{Binding $parent[UserControl].DataContext.AnalyzeAlbumCommand}" 
                                                  CommandParameter="{Binding Album}">
                                             <MenuItem.Icon>
                                                <TextBlock Text="ðŸ’¿"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <Grid RowDefinitions="Auto,Auto">
                                    <!-- Main Row Content -->
                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto,Auto">
                                        <!-- Album Art -->
                                        <Border Grid.RowSpan="2" Grid.Column="0" 
                                                Width="40" Height="40" 
                                                CornerRadius="4" 
                                                Margin="0,0,12,0"
                                                Background="#222"
                                                Opacity="{Binding IsDownloaded, Converter={StaticResource BoolOpacityConverter}, ConverterParameter=0.3}"
                                                Effect="{Binding IsDownloaded, Converter={StaticResource BoolBlurConverter}}">
                                            <Image Source="{Binding ArtworkBitmap}" Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Line 1: Artist - Title + Integrity -->
                                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Artist}" FontWeight="Bold" FontSize="14" Foreground="White"/>
                                            <TextBlock Text="-" Foreground="#888"/>
                                            <TextBlock Text="{Binding Title}" FontSize="14" Foreground="#DDD"/>
                                            
                                            <!-- Integrity Badge -->
                                            <Border Background="Transparent" Margin="6,0,0,0" ToolTip.Tip="{Binding IntegrityTooltip}"
                                                    IsVisible="{Binding IntegrityBadge, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                <TextBlock Text="{Binding IntegrityBadge}" FontSize="14"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Line 2: Technical Metadata -->
                                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="12" Margin="0,4,0,0" 
                                                    Opacity="{Binding IsDownloaded, Converter={StaticResource BoolOpacityConverter}, ConverterParameter=0.3}"
                                                    Effect="{Binding IsDownloaded, Converter={StaticResource BoolBlurConverter}}">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="â±" FontSize="11" Foreground="#666"/>
                                                <TextBlock Text="{Binding BPM, StringFormat='{}{0:F0}'}" FontFamily="Consolas, Monospace" FontSize="11" Foreground="#888"/>
                                            </StackPanel>
                                            
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="ðŸŽµ" FontSize="11" Foreground="#666"/>
                                                <TextBlock Text="{Binding MusicalKey}" FontFamily="Consolas, Monospace" FontSize="11" Foreground="#888"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="âš¡" FontSize="11" Foreground="#666"/>
                                                <!-- Vibe Meter (Mini) -->
                                                <Border Width="40" Height="4" Background="#333" VerticalAlignment="Center" CornerRadius="2">
                                                    <Border Width="{Binding Energy, Converter={x:Static conv:MathConverter.Multiply}, ConverterParameter=40}" 
                                                            HorizontalAlignment="Left" 
                                                            Background="#4EC9B0" 
                                                            CornerRadius="2"/>
                                                </Border>
                                            </StackPanel>
                                            
                                            <TextBlock Text="{Binding Bitrate, StringFormat='{}{0}kbps'}" FontSize="11" Foreground="#666"/>
                                        </StackPanel>
                                        
                                        <!-- Line 1 Right: Status Badge -->
                                        <Border Grid.Row="0" Grid.Column="2" 
                                                Background="#1AFFFFFF" 
                                                CornerRadius="4" 
                                                Padding="8,2" 
                                                VerticalAlignment="Center"
                                                Margin="0,0,12,0">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <TextBlock Text="{Binding MetadataStatusSymbol}" VerticalAlignment="Center" FontSize="10"/>
                                                <TextBlock Text="{Binding StatusText}" 
                                                           Foreground="{Binding StatusColor}" 
                                                           FontWeight="Bold" 
                                                           FontSize="11"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Actions -->
                                        <StackPanel Grid.RowSpan="2" Grid.Column="3" Orientation="Horizontal">
                                             <ToggleButton IsChecked="{Binding IsExpanded}"
                                                           Classes="icon-button"
                                                           Padding="8"
                                                           ToolTip.Tip="Expand Details">
                                                <TextBlock Text="{Binding IsExpanded, Converter={StaticResource RankColorConverter}, ConverterParameter='â–¼;â–¶'}" FontSize="12" Foreground="#888"/>
                                            </ToggleButton>
                                            
                                             <Button Command="{Binding $parent[UserControl].DataContext.ToggleInspectorCommand}" 
                                                    CommandParameter="{Binding}"
                                                    Classes="icon-button"
                                                    Padding="8"
                                                    ToolTip.Tip="Inspect Track">
                                                <TextBlock Text="ðŸ”¬" FontSize="14" Foreground="#888"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <!-- EXPANDING INSPECTOR CARD (Row Details) -->
                                    <Border Grid.Row="1" 
                                            Background="#181818" 
                                            BorderBrush="#333" 
                                            BorderThickness="0,1,0,0" 
                                            Margin="-8,8,-8,-6"
                                            Padding="20"
                                            IsVisible="{Binding IsExpanded}">
                                        <Grid ColumnDefinitions="Auto,*,400">
                                            <!-- High Res Art -->
                                            <Border Grid.Column="0" Width="140" Height="140" CornerRadius="8" Background="#111" Margin="0,0,24,0" BoxShadow="0 4 12 0 #80000000">
                                                <Image Source="{Binding AlbumArtUrl, Converter={StaticResource BitmapValueConverter}}" Stretch="UniformToFill"/>
                                            </Border>
                                            
                                            <!-- Detailed Stats -->
                                            <StackPanel Grid.Column="1" Spacing="12">
                                                <TextBlock Text="ACOUSTIC FINGERPRINT" FontSize="10" FontWeight="Bold" Foreground="#555" LetterSpacing="1"/>
                                                
                                                <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto,Auto" Margin="0,4">
                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Energy" Foreground="#888" VerticalAlignment="Center"/>
                                                    <ProgressBar Grid.Row="0" Grid.Column="1" Value="{Binding Energy}" Maximum="1" Width="200" HorizontalAlignment="Left" Height="6" Foreground="#4EC9B0" Background="#222" CornerRadius="3"/>
                                                    
                                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Danceability" Foreground="#888" Margin="0,12" VerticalAlignment="Center"/>
                                                    <ProgressBar Grid.Row="1" Grid.Column="1" Value="{Binding Danceability}" Maximum="1" Width="200" HorizontalAlignment="Left" Height="6" Foreground="#9C27B0" Background="#222" CornerRadius="3" Margin="0,12"/>
                                                    
                                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Valence" Foreground="#888" VerticalAlignment="Center"/>
                                                    <ProgressBar Grid.Row="2" Grid.Column="1" Value="{Binding Valence}" Maximum="1" Width="200" HorizontalAlignment="Left" Height="6" Foreground="#FF9800" Background="#222" CornerRadius="3"/>
                                                </Grid>
                                                
                                                <Separator Height="1" Background="#222" Margin="0,8"/>
                                                
                                                <StackPanel Orientation="Horizontal" Spacing="24">
                                                    <StackPanel>
                                                        <TextBlock Text="QUALITY" FontSize="10" Foreground="#555"/>
                                                        <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,2">
                                                            <TextBlock Text="{Binding IntegritySymbol}" Foreground="#4EC9B0"/>
                                                            <TextBlock Text="{Binding IntegrityText}" Foreground="#CCC"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    
                                                    <StackPanel>
                                                        <TextBlock Text="LOUDNESS" FontSize="10" Foreground="#555"/>
                                                        <TextBlock Text="{Binding LoudnessDisplay}" Foreground="#CCC" Margin="0,2"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel>
                                                        <TextBlock Text="FILE SIZE" FontSize="10" Foreground="#555"/>
                                                        <TextBlock Text="{Binding FileSizeDisplay}" Foreground="#CCC" Margin="0,2"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- High-Fidelity Waveform -->
                                            <StackPanel Grid.Column="2" Spacing="8">
                                                <TextBlock Text="SIGNAL OVERVIEW" FontSize="10" FontWeight="Bold" Foreground="#555" LetterSpacing="1"/>
                                                <Border Height="100" Background="#111" CornerRadius="4" Padding="4">
                                                    <controls:WaveformControl WaveformData="{Binding WaveformData}"
                                                                              Height="90"
                                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                <Grid ColumnDefinitions="Auto,*,Auto">
                                                    <TextBlock Grid.Column="0" Text="0:00" FontSize="10" Foreground="#444"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding DurationDisplay}" FontSize="10" Foreground="#444"/>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Phase 6D: Shimmer Loading Overlay -->
                <Border Background="#CC1A1A1A"
                        IsVisible="{Binding IsLoading}"
                        ZIndex="100">
                    <StackPanel VerticalAlignment="Center" Spacing="20" Margin="40">
                        <Border Classes="skeleton" Height="30" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" Width="400" HorizontalAlignment="Left" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" Width="300" HorizontalAlignment="Left" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" CornerRadius="4"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Floating Action Bar (Multi-Select) -->
            <Border Grid.Row="2" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,32"
                    Background="#252526"
                    BorderBrush="#4EC9B0"
                    BorderThickness="1"
                    CornerRadius="8"
                    BoxShadow="0 4 20 0 #A0000000"
                    Padding="16,10"
                    IsVisible="{Binding Tracks.HasMultiSelection}"
                    ZIndex="50">
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <TextBlock Text="{Binding Tracks.SelectedCountText}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#4EC9B0"/>
                    
                    <Separator Width="1" Height="16" Background="#444"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Command="{Binding Tracks.BulkDownloadCommand}" Classes="accent" 
>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ’¾"/>
                                <TextBlock Text="Download Selected"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding Tracks.CopyToFolderCommand}" Classes="accent" 
>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ“‚"/>
                                <TextBlock Text="Copy to Folder"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding Tracks.BulkRetryCommand}" 
>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ”„"/>
                                <TextBlock Text="Retry Failed"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding Tracks.BulkCancelCommand}" Classes="danger" 
>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="âœ•"/>
                                <TextBlock Text="Cancel Active"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding Tracks.BulkReEnrichCommand}" 
>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ”"/>
                                <TextBlock Text="Re-Enrich Metadata"/>
                            </StackPanel>
                        </Button>
                        
                        <Separator Width="1" Height="16" Background="#444" Margin="8,0"/>
                        
                        <Button Command="{Binding Tracks.DeselectAllTracksCommand}" Background="Transparent" BorderThickness="0">
                            <TextBlock Text="Clear Selection" Foreground="#888"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- GridSplitter for Mix Helper -->
        <GridSplitter Grid.Column="3" 
                      Width="5" 
                      Background="#2E2E2E" 
                      ResizeDirection="Columns"
                      IsVisible="{Binding IsMixHelperVisible}"/>

        <!-- RIGHT PANEL: Mix Helper Sidebar (Phase 9: DJ Features) -->
        <Border Grid.Column="4" 
                Background="#1A1A1D" 
                BorderBrush="#2A2A2E" 
                BorderThickness="1,0,0,0"
                Width="320"
                IsVisible="{Binding IsMixHelperVisible}">
            <Grid RowDefinitions="Auto,*">
                <!-- Header -->
                <Border Grid.Row="0" 
                        Background="#202024" 
                        BorderBrush="#3E3E3E" 
                        BorderThickness="0,0,0,1" 
                        Padding="16,12">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <TextBlock Grid.Column="0" 
                                   Text="ðŸŽ¹" 
                                   FontSize="18" 
                                   VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="MIX HELPER" 
                                       FontSize="11" 
                                       FontWeight="Bold" 
                                       Foreground="#888" 
                                       LetterSpacing="1"/>
                            <TextBlock Text="Harmonic Matches" 
                                       FontSize="13" 
                                       Foreground="White" 
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        <Button Grid.Column="2" 
                                Command="{Binding $parent[UserControl].DataContext.ToggleMixHelperCommand}"
                                Background="Transparent" 
                                BorderThickness="0" 
                                Padding="8,4">
                            <TextBlock Text="âœ•" FontSize="14" Foreground="#888"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Content -->
                <ScrollViewer Grid.Row="1">
                    <StackPanel Spacing="16" Margin="16">
                        <!-- Seed Track Info -->
                        <Border Background="#222226" 
                                CornerRadius="8" 
                                Padding="12"
                                IsVisible="{Binding MixHelperSeedTrack, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="NOW PLAYING" 
                                           FontSize="10" 
                                           FontWeight="Bold" 
                                           Foreground="#888" 
                                           LetterSpacing="1"/>
                                <TextBlock Text="{Binding MixHelperSeedTrack.Title}" 
                                           FontSize="14" 
                                           FontWeight="Bold" 
                                           Foreground="White" 
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding MixHelperSeedTrack.Artist}" 
                                           FontSize="12" 
                                           Foreground="#AAA"/>
                            </StackPanel>
                        </Border>

                        <!-- Loading State -->
                        <Border Background="#222226" 
                                CornerRadius="8" 
                                Padding="24"
                                IsVisible="{Binding IsLoadingMatches}">
                            <StackPanel Spacing="12" HorizontalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" 
                                             Width="120" 
                                             Height="4" 
                                             Foreground="#00A3FF"/>
                                <TextBlock Text="Finding matches..." 
                                           FontSize="12" 
                                           Foreground="#888" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Matches List -->
                        <ItemsControl ItemsSource="{Binding HarmonicMatches}"
                                      IsVisible="{Binding !IsLoadingMatches}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="8"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#222226" 
                                            CornerRadius="8" 
                                            Padding="12"
                                            BorderBrush="Transparent"
                                            BorderThickness="1">
                                        <Border.Styles>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="BorderBrush" Value="#404045"/>
                                                <Setter Property="Background" Value="#2A2A2E"/>
                                            </Style>
                                        </Border.Styles>
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <!-- Relationship Icon -->
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding RelationshipIcon}" 
                                                       FontSize="20" 
                                                       VerticalAlignment="Top"
                                                       Margin="0,0,12,0"/>

                                            <!-- Track Info -->
                                            <StackPanel Grid.Column="1" Spacing="4">
                                                <TextBlock Text="{Binding TrackDisplay}" 
                                                           FontSize="13" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="White" 
                                                           TextWrapping="Wrap"/>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <Border Background="#1A00A3FF" 
                                                            CornerRadius="3" 
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding RelationshipText}" 
                                                                   FontSize="10" 
                                                                   Foreground="#00A3FF" 
                                                                   FontWeight="Bold"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding BpmDisplay}" 
                                                               FontSize="10" 
                                                               Foreground="#888"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Score Badge -->
                                            <Border Grid.Column="2" 
                                                    Background="#1A1DB954" 
                                                    BorderBrush="#1DB954" 
                                                    BorderThickness="1"
                                                    CornerRadius="6" 
                                                    Padding="8,4"
                                                    VerticalAlignment="Top">
                                                <TextBlock Text="{Binding ScoreDisplay}" 
                                                           FontSize="11" 
                                                           Foreground="#1DB954" 
                                                           FontWeight="Bold"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <Border Background="#222226" 
                                CornerRadius="8" 
                                Padding="24"
                                IsVisible="{Binding !HarmonicMatches.Count}">
                            <StackPanel Spacing="12" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸŽ¹" FontSize="32" HorizontalAlignment="Center" Opacity="0.3"/>
                                <TextBlock Text="No matches found" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#888" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Select a track with Key and BPM metadata" 
                                           FontSize="11" 
                                           Foreground="#666" 
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- RIGHT SPLITTER (Inspector) -->
        <GridSplitter Grid.Column="5" Width="4" Background="Transparent" ResizeDirection="Columns" IsVisible="{Binding IsInspectorOpen}"/>

        <!-- RIGHT PANEL: Slide-In Track Inspector -->
        <Border Grid.Column="6" 
                Width="450"
                Background="#1A1A1A" 
                BorderBrush="#3E3E3E" 
                BorderThickness="1,0,0,0"
                IsVisible="{Binding IsInspectorOpen}">
            <views:TrackInspectorView DataContext="{Binding TrackInspector}"/>
        </Border>

        <!-- REMOVAL HISTORY OVERLAY -->
        <Border Grid.ColumnSpan="7" 
                Background="#CC000000" 
                IsVisible="{Binding IsRemovalHistoryVisible}"
                ZIndex="100">
            <Border Background="#252526" 
                    Width="600" 
                    Height="500" 
                    CornerRadius="12" 
                    BorderBrush="#3E3E3E" 
                    BorderThickness="1"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="20,16" ColumnDefinitions="*,Auto">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ—‘ï¸" FontSize="20" VerticalAlignment="Center"/>
                            <TextBlock Text="Removal History" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="1" 
                                Command="{Binding RelayCommand}" 
                                CommandParameter="{Binding $parent[UserControl].DataContext}"
                                Click="CloseRemovalHistory_Click"
                                Background="Transparent" Padding="8">
                            <TextBlock Text="âœ•" FontSize="16"/>
                        </Button>
                    </Grid>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" Margin="20,0">
                        <ItemsControl ItemsSource="{Binding DeletedProjects}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2D2D2E" Margin="0,0,0,8" Padding="12" CornerRadius="8">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <Border Width="40" Height="40" CornerRadius="4" Background="#3E3E3F" Margin="0,0,12,0">
                                                <TextBlock Text="ðŸ“€" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding SourceTitle}" FontWeight="Medium" FontSize="14"/>
                                                <TextBlock Text="{Binding DeletedAt, StringFormat='Deleted on {0:MMM dd, yyyy}'}" FontSize="12" Foreground="#888"/>
                                            </StackPanel>
                                            <Button Grid.Column="2" 
                                                    Classes="primary" 
                                                    Command="{Binding $parent[UserControl].DataContext.RestoreProjectCommand}"
                                                    CommandParameter="{Binding}"
                                                    Padding="12,6">
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <TextBlock Text="âª"/>
                                                    <TextBlock Text="Restore"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" Background="#2D2D2E" Padding="20,12" CornerRadius="0,0,12,12">
                        <TextBlock Text="Restoring an album will preserve all its tracks and metadata." 
                                   FontSize="12" Foreground="#888" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
