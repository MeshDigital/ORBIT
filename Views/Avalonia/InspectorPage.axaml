<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:SLSKDONET.Views.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SLSKDONET.Views.Avalonia.InspectorPage">
    <Grid>
        <!-- Host the Track Inspector View centered or full -->
        <Border Background="#1E1E1E" Padding="20">
             <views:TrackInspectorView DataContext="{Binding}"/>
        </Border>
    </Grid>
</UserControl>
