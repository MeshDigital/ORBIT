<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SLSKDONET.ViewModels.Discovery"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="SLSKDONET.Views.Avalonia.CrateDiggerView"
             x:DataType="vm:CrateDiggerViewModel">

    <Grid RowDefinitions="Auto, *, Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="5" Margin="0,0,0,20">
            <TextBlock Text="Discovery Hub" FontSize="24" FontWeight="Bold" Foreground="#00A3FF"/>
            <TextBlock Text="Paste tracklists, YouTube URLs, or raw text to start your set." 
                       FontSize="14" Opacity="0.7"/>
        </StackPanel>

        <!-- Scratchpad Area -->
        <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="8" BorderBrush="#333333" BorderThickness="1">
            <Grid RowDefinitions="Auto, *">
                <Border Grid.Row="0" Background="#252525" CornerRadius="8,8,0,0" Padding="10">
                    <TextBlock Text="SCRATCHPAD" FontWeight="SemiBold" FontSize="12" Opacity="0.9" LetterSpacing="1"/>
                </Border>
                <TextBox Grid.Row="1" 
                         Text="{Binding ScratchpadText}" 
                         AcceptsReturn="True"
                         Watermark="Artist - Title (Remix)...&#x0a;https://youtube.com/watch?v=...&#x0a;https://soundcloud.com/..."
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="15"
                         FontSize="16"
                         FontFamily="{StaticResource MonospaceFont}"
                         Classes="no-focus-border"/>
            </Grid>
        </Border>

        <!-- Action Bar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="15" Margin="0,20,0,0">
            <Button Command="{Binding AutoCleanCommand}" 
                    Classes="secondary"
                    Padding="20,10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <PathIcon Data="{StaticResource magic_wand_regular}" Width="16" Height="16"/>
                    <TextBlock Text="Auto-Clean"/>
                </StackPanel>
            </Button>
            
            <Button Command="{Binding SendToInBoxCommand}" 
                    Classes="accent"
                    Padding="20,10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <PathIcon Data="{StaticResource send_regular}" Width="16" Height="16"/>
                    <TextBlock Text="Send to In-Box"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Processing Overlay -->
        <Border Grid.RowSpan="3" Background="#AA000000" IsVisible="{Binding IsProcessing}" CornerRadius="8">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                <ProgressBar IsIndeterminate="True" Width="200" Foreground="#00A3FF"/>
                <TextBlock Text="Processing Analysis..." HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
