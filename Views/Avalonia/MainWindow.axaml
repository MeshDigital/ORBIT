<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="SLSKDONET.Views.Avalonia.MainWindow"
        Title="SLSKDONET - Soulseek Music Downloader"
        Width="1200" Height="800"
        Background="#1E1E1E">
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Background="#252526" Padding="16">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="ðŸ” Search" Command="{Binding NavigateSearchCommand}" Background="#0078D4" Foreground="White" Padding="12,8" CornerRadius="4"/>
                <Button Content="ðŸ“¥ Imported" Command="{Binding NavigateImportedCommand}" Background="#0078D4" Foreground="White" Padding="12,8" CornerRadius="4"/>
                <Button Content="â¬‡ï¸ Downloads" Command="{Binding NavigateDownloadsCommand}" Background="#0078D4" Foreground="White" Padding="12,8" CornerRadius="4"/>
                <Button Content="ðŸ“š Library" Command="{Binding NavigateLibraryCommand}" Background="#0078D4" Foreground="White" Padding="12,8" CornerRadius="4"/>
                <Button Content="âš™ï¸ Settings" Command="{Binding NavigateSettingsCommand}" Background="#0078D4" Foreground="White" Padding="12,8" CornerRadius="4"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Content="{Binding CurrentPage}" Grid.Row="1" Background="#1E1E1E"/>

        <!-- Login Overlay (shown when not connected) -->
        <Grid Grid.RowSpan="3" Background="#AA000000" IsVisible="{Binding IsLoginOverlayVisible}" ZIndex="10">
            <Border Background="#1E1E1E" CornerRadius="8" Padding="24" MaxWidth="420" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#3A3A3A" BorderThickness="1">
                <StackPanel Spacing="12">
                    <TextBlock Text="Sign in to Soulseek" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Enter your Soulseek credentials to connect" Foreground="#C8C8C8" FontSize="12"/>

                    <StackPanel Spacing="6">
                        <TextBlock Text="Username" Foreground="#A0A0A0" FontSize="12"/>
                        <TextBox Text="{Binding Username, Mode=TwoWay}" Watermark="Username"/>
                    </StackPanel>

                    <StackPanel Spacing="6">
                        <TextBlock Text="Password" Foreground="#A0A0A0" FontSize="12"/>
                        <TextBox x:Name="LoginPasswordBox" Watermark="Password"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <CheckBox Content="Remember me" IsChecked="{Binding RememberPassword, Mode=TwoWay}" Foreground="#C8C8C8"/>
                        <CheckBox Content="Auto-connect" IsChecked="{Binding AutoConnectEnabled, Mode=TwoWay}" Foreground="#C8C8C8"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Connect" Command="{Binding LoginCommand}" CommandParameter="{Binding #LoginPasswordBox.Text}" Background="#0A84FF" Foreground="White" Padding="12,8" Width="120"/>
                        <Button Content="Dismiss" Command="{Binding DismissLoginCommand}" Background="#3A3A3A" Foreground="White" Padding="12,8" Width="120"/>
                    </StackPanel>

                    <TextBlock Text="{Binding StatusText}" Foreground="#FFB347" FontSize="12" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#252526" Padding="16,8">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{Binding StatusMessage}" Foreground="#A0A0A0" FontSize="12"/>
                <TextBlock Grid.Column="1" Text="{Binding ConnectionStatus}" Foreground="#A0A0A0" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
