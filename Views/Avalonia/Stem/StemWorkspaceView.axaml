<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:SLSKDONET.Views.Avalonia.Stem"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.Stem.StemWorkspaceView">

    <Grid RowDefinitions="Auto,*">
        
        <!-- Header -->
        <Border Grid.Row="0" Height="70" Background="#111" BorderBrush="#333" BorderThickness="0,0,0,1" Padding="20,10">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Back Button -->
                <Button Grid.Column="0" 
                        Content="â† Back to Library" 
                        Command="{Binding CloseCommand}"
                        Background="Transparent" 
                        BorderBrush="Transparent"
                        Foreground="#999"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
                
                <!-- Title & Current Track Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="40,0,0,0">
                    <TextBlock Text="STEM WORKSPACE" FontWeight="Bold" FontSize="16" LetterSpacing="2" Foreground="White"/>
                    <TextBlock Text="{Binding CurrentTrackDisplay}" FontSize="12" Foreground="#AAA" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Transport & Export -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <Button Command="{Binding TogglePlayCommand}" 
                            Background="#FF4081" 
                            Foreground="White" 
                            CornerRadius="20" 
                            Padding="20,8"
                            FontWeight="SemiBold">
                        <TextBlock Text="{Binding PlayButtonLabel}"/>
                    </Button>
                    <Button Content="ðŸ’¾ Save" 
                            Command="{Binding SaveProjectCommand}"
                            Background="#333" 
                            Padding="12,8"
                            CornerRadius="4"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="280,*,220" Margin="20">
            
            <!-- Left Panel: History -->
            <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="8" Padding="15" Margin="0,0,20,0">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="SEPARATION HISTORY" FontWeight="Bold" FontSize="11" LetterSpacing="1" Margin="0,0,0,12"/>
                    <ListBox Grid.Row="1" 
                             Background="Transparent" 
                             ItemsSource="{Binding SeparationHistory}"
                             SelectedItem="{Binding SelectedHistoryItem}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#222" CornerRadius="4" Padding="8,6" Margin="0,0,0,6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding TrackName}" Foreground="White" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Artist}" Foreground="#999" FontSize="10" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding SeparatedDate, StringFormat='{}{0:MMM dd, HH:mm}'}" Foreground="#666" FontSize="9" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Center Panel: Mixer & Waveforms -->
            <Grid Grid.Column="1" RowDefinitions="180,*">
                <!-- Waveform Display -->
                <Border Grid.Row="0" Margin="0,0,0,20">
                    <views:MultiStemWaveformView DataContext="{Binding Mixer}"/>
                </Border>

                <!-- Mixer Console -->
                <views:StemMixerView Grid.Row="1" DataContext="{Binding Mixer}"/>
            </Grid>

            <!-- Right Panel: Saved Projects -->
            <Border Grid.Column="2" Background="#1A1A1A" CornerRadius="8" Padding="15" Margin="20,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="SAVED MIXES" FontWeight="Bold" FontSize="11" LetterSpacing="1" Margin="0,0,0,12"/>
                    <ListBox Grid.Row="1" 
                             Background="Transparent" 
                             ItemsSource="{Binding SavedProjects}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#222" CornerRadius="4" Padding="8,6" Margin="0,0,0,6">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Modified, StringFormat='{}{0:g}'}" Foreground="#999" FontSize="9" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        <Button Grid.Column="1" 
                                                Content="Load" 
                                                Command="{Binding $parent[UserControl].DataContext.LoadProjectCommand}" 
                                                CommandParameter="{Binding}"
                                                FontSize="10" 
                                                Padding="8,4" 
                                                Background="Transparent"
                                                BorderBrush="#555"
                                                BorderThickness="1"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
