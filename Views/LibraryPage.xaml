<Page x:Class="SLSKDONET.Views.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewmodels="clr-namespace:SLSKDONET.ViewModels"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=viewmodels:LibraryViewModel}"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="LibraryPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Filter Tab Style -->
        <Style x:Key="FilterTabStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border" Background="Transparent" BorderBrush="#444" BorderThickness="1" 
                                CornerRadius="4" Padding="12,6" Margin="0">
                            <TextBlock Text="{TemplateBinding Content}" Foreground="#AAA" FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#121212">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR: Playlists -->
        <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#333" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Margin="20,20,20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="My Library" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1" Command="{Binding RefreshLibraryCommand}" 
                            Background="Transparent" BorderThickness="0" Foreground="#666" Cursor="Hand"
                            ToolTip="Refresh Library" Padding="8">
                         <TextBlock Text="ðŸ”„" FontSize="14"/>
                    </Button>
                </Grid>

                <!-- New Playlist Button -->
                <Button Grid.Row="1" Command="{Binding CreatePlaylistCommand}" 
                        Margin="12,0,12,10" Background="#2A2A2A" BorderThickness="1" BorderBrush="#333"
                        Cursor="Hand" Height="36">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="âž•" Margin="0,0,8,0" FontSize="12" Foreground="#007ACC"/>
                                    <TextBlock Text="New Playlist" FontSize="13" FontWeight="SemiBold" Foreground="#DDD"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#333"/>
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#444"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- All Tracks Button -->
                <Button Grid.Row="2" Command="{Binding LoadAllTracksCommand}" 
                        Margin="12,0,12,10" Background="Transparent" BorderThickness="0" 
                        HorizontalContentAlignment="Left" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" Padding="12,8" CornerRadius="6" Background="Transparent">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“‚" Margin="0,0,12,0" FontSize="16" VerticalAlignment="Center" Foreground="#AAA"/>
                                    <TextBlock Text="All Tracks" FontSize="14" FontWeight="Medium" Foreground="#DDD" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#252525"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Empty State for Playlist List -->
                <TextBlock Grid.Row="3" Text="No playlists found." 
                           Foreground="#888" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding AllProjects.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Playlist List -->
                <ListBox Grid.Row="3" 
                         ItemsSource="{Binding AllProjects}" 
                         SelectedItem="{Binding SelectedProject}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Padding="10">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" 
                                                Padding="10,8" 
                                                CornerRadius="6" 
                                                Margin="0,2"
                                                Background="Transparent"
                                                SnapsToDevicePixels="True">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#333333"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#252525"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="#E0E0E0"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Width="40" Height="40" CornerRadius="4" Background="#2A2A2A" Margin="0,0,12,0">
                                    <TextBlock Text="ðŸŽµ" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding SourceTitle}" FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding SourceType}" FontSize="11" Foreground="#88FFFFFF" Margin="0,2,8,0"/>
                                        <TextBlock Text="{Binding TotalTracks, StringFormat='{}{0} tracks'}" FontSize="11" Foreground="#66FFFFFF" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header & Toolbar -->
                <RowDefinition Height="*"/>    <!-- Track List -->
            </Grid.RowDefinitions>

            <!-- EMPTY STATE -->
            <Grid Grid.RowSpan="2" Panel.ZIndex="0" 
                  Visibility="{Binding SelectedProject, Converter={StaticResource InverseNullToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5">
                    <TextBlock Text="ðŸŽµ" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Select a playlist to view tracks" FontSize="18" Foreground="#888"/>
                </StackPanel>
            </Grid>

            <!-- ACTIVE CONTENT -->
            <Grid Grid.RowSpan="2" Panel.ZIndex="1"
                   Visibility="{Binding SelectedProject, Converter={StaticResource NullToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/> <!-- HUD -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER & ACTIONS -->
                <Border Grid.Row="0" Padding="40,30,40,30" Background="#181818" BorderBrush="#222" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Title block -->
                            <RowDefinition Height="Auto"/> <!-- Controls block -->
                        </Grid.RowDefinitions>

                        <!-- Title & Stats -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,25">
                            <TextBlock Text="{Binding SelectedProject.SourceTitle}" 
                                       FontSize="32" FontWeight="Bold" Foreground="White"
                                       TextTrimming="CharacterEllipsis" Margin="0,0,0,8"/>
                            
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#333" CornerRadius="4" Padding="6,2" Margin="0,0,12,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding SelectedProject.SourceType}" Foreground="#DDD" FontSize="12" FontWeight="SemiBold"/>
                                </Border>
                                <TextBlock VerticalAlignment="Center" Foreground="#888" FontSize="14">
                                    <Run Text="{Binding SelectedProject.SuccessfulCount, Mode=OneWay}" Foreground="#4CAF50"/>
                                    <Run Text="/"/>
                                    <Run Text="{Binding SelectedProject.TotalTracks, Mode=OneWay}"/>
                                    <Run Text="tracks downloaded"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <!-- Toolbar (Search & Actions) -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/> <!-- Search -->
                                <ColumnDefinition Width="Auto"/> <!-- Filters -->
                                <ColumnDefinition Width="*"/>    <!-- Spacer -->
                                <ColumnDefinition Width="Auto"/> <!-- Actions -->
                            </Grid.ColumnDefinitions>

                            <!-- SEARCH -->
                            <Grid Grid.Column="0" HorizontalAlignment="Left" Width="300" Margin="0,0,30,0">
                                <TextBox x:Name="LibSearchBox"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#222" Foreground="White" BorderThickness="1" BorderBrush="#333"
                                         Padding="12,8" VerticalContentAlignment="Center" FontSize="14"
                                         Height="38">
                                    <TextBox.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="19"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                                <TextBlock Text="ðŸ” Filter tracks..." IsHitTestVisible="False" Foreground="#666" Margin="14,0,0,0" VerticalAlignment="Center" FontSize="14">
                                     <TextBlock.Style>
                                         <Style TargetType="TextBlock">
                                             <Setter Property="Visibility" Value="Collapsed"/>
                                             <Style.Triggers>
                                                 <DataTrigger Binding="{Binding Text, ElementName=LibSearchBox}" Value="">
                                                     <Setter Property="Visibility" Value="Visible"/>
                                                 </DataTrigger>
                                             </Style.Triggers>
                                         </Style>
                                     </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <!-- FILTER TABS -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <RadioButton Content="All" GroupName="TrackFilter" 
                                             IsChecked="{Binding IsFilterAll, Mode=TwoWay}"
                                             Style="{StaticResource FilterTabStyle}" Margin="0,0,8,0"/>
                                <RadioButton Content="Downloaded" GroupName="TrackFilter" 
                                             IsChecked="{Binding IsFilterDownloaded, Mode=TwoWay}"
                                             Style="{StaticResource FilterTabStyle}" Margin="0,0,8,0"/>
                                <RadioButton Content="Pending/Ongoing" GroupName="TrackFilter" 
                                             IsChecked="{Binding IsFilterPending, Mode=TwoWay}"
                                             Style="{StaticResource FilterTabStyle}"/>
                            </StackPanel>

                            <!-- ACTIONS -->
                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Start Controls -->
                                <Button Command="{Binding ResumeProjectCommand}" ToolTip="Start All Active / Resume"
                                        Margin="0,0,10,0" Padding="15,8" Background="#1B5E20" BorderThickness="0" Cursor="Hand" Height="38">
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="â–¶" Margin="0,0,6,0" FontSize="12"/>
                                        <TextBlock Text="Start" Foreground="#C8E6C9" FontWeight="SemiBold" FontSize="13"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding PauseProjectCommand}" ToolTip="Pause All"
                                        Margin="0,0,20,0" Padding="15,8" Background="#262626" BorderThickness="0" Cursor="Hand" Height="38">
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="â¸" Margin="0,0,6,0" FontSize="12"/>
                                        <TextBlock Text="Pause" Foreground="#DDD" FontWeight="SemiBold" FontSize="13"/>
                                    </StackPanel>
                                </Button>

                                <!-- Management Controls -->
                                <Button Command="{Binding OpenFolderCommand}" ToolTip="Open Folder"
                                        Margin="0,0,10,0" Padding="15,8" Background="#222" BorderThickness="1" BorderBrush="#333" Cursor="Hand" Height="38">
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ“‚" Margin="0,0,8,0" FontSize="14"/>
                                        <TextBlock Text="Folder" Foreground="#DDD" FontWeight="SemiBold" FontSize="13"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding RemoveTrackCommand}" ToolTip="Remove Selected"
                                        Margin="0,0,10,0" Padding="15,8" Background="#222" BorderThickness="1" BorderBrush="#333" Cursor="Hand" Height="38">
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ—‘ï¸" Margin="0,0,8,0" FontSize="14"/>
                                        <TextBlock Text="Remove" Foreground="#DDD" FontWeight="SemiBold" FontSize="13"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Command="{Binding DeleteProjectCommand}" ToolTip="Delete Playlist"
                                        Margin="0,0,0,0" Padding="15,8" Background="#3E2723" BorderThickness="0" Cursor="Hand" Height="38">
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âŒ" Margin="0,0,6,0" FontSize="12"/>
                                        <TextBlock Text="Delete" Foreground="#FFAB91" FontWeight="SemiBold" FontSize="13"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- ACTIVE DOWNLOADS HUD -->
                <!-- ACTIVE DOWNLOADS HUD -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header / Toggle -->
                    <Button Command="{Binding ToggleActiveDownloadsCommand}" Background="#1A1A1A" BorderThickness="0,0,0,1" BorderBrush="#333"
                            HorizontalContentAlignment="Stretch" Padding="10" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <Grid Margin="{TemplateBinding Padding}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Arrow Icon -->
                                        <TextBlock Text="â–¼" Foreground="#DDD" FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActiveDownloadsVisible}" Value="False">
                                                            <Setter Property="Text" Value="â–¶"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        
                                        <TextBlock Grid.Column="1" Text="Active Downloads &amp; Concurrency" Foreground="#DDD" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Grid Grid.Row="1" Height="120" Visibility="{Binding IsActiveDownloadsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- List -->
                        <ListView Grid.Column="0" ItemsSource="{Binding ActiveDownloadsView}" Background="#111" BorderThickness="0" Foreground="White" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4" Width="450">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Artist}" Foreground="#AAA" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        <ProgressBar Grid.Column="1" Value="{Binding Progress}" Maximum="100" Height="4" Margin="10,0" VerticalAlignment="Center" Foreground="#007ACC" Background="#333" BorderThickness="0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding CurrentSpeed}" Foreground="#888" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="11"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border Background="{TemplateBinding Background}" Padding="8,2">
                                                    <ContentPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#222"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <!-- Controls -->
                        <StackPanel Grid.Column="1" Margin="20,10,10,0" VerticalAlignment="Top">
                            <TextBlock Text="Max Concurrent Downloads" Foreground="#AAA" FontSize="12" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider Value="{Binding MaxDownloads}" Minimum="1" Maximum="10" Width="150" 
                                        AutoToolTipPlacement="TopLeft" SmallChange="1" IsSnapToTickEnabled="True" TickPlacement="BottomRight"/>
                                <TextBlock Text="{Binding MaxDownloads}" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBlock Text="Limit active downloads to share bandwidth." Foreground="#666" FontSize="10" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- TRACK LIST DATAGRID -->
                <DataGrid Grid.Row="2" 
                          ItemsSource="{Binding FilteredTracks}"
                          AutoGenerateColumns="False"
                          Background="Transparent"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#222"
                          RowBackground="Transparent"
                          Foreground="#DDD"
                          RowHeight="40"
                          HeadersVisibility="Column"
                          RowHeaderWidth="0"
                          Padding="0"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="False">
                    
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#888"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#333"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2AFFFFFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        
                        <!-- Styles for Editing -->
                        <Style x:Key="TitleColumnStyle" TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                        <Style x:Key="EditingTextStyle" TargetType="TextBox">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                        
                        <Style TargetType="DataGridRow">
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridRow_PreviewMouseLeftButtonDown"/>
                            <EventSetter Event="Drop" Handler="DataGridRow_Drop"/>
                            <EventSetter Event="PreviewDragOver" Handler="OnPreviewDragOver"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1AFFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- # -->
                        <DataGridTextColumn Header="#" Binding="{Binding SortOrder}" Width="50" Foreground="#666" IsReadOnly="True" ElementStyle="{StaticResource TitleColumnStyle}"/>
                        
                        <!-- Title (Editable) -->
                        <DataGridTextColumn Header="Title" Binding="{Binding Title, UpdateSourceTrigger=LostFocus}" Width="3*" ElementStyle="{StaticResource TitleColumnStyle}" EditingElementStyle="{StaticResource EditingTextStyle}"/>

                        <!-- Artist (Editable) -->
                        <DataGridTextColumn Header="Artist" Binding="{Binding Artist, UpdateSourceTrigger=LostFocus}" Width="2*" EditingElementStyle="{StaticResource EditingTextStyle}"/>

                        <!-- Album (Editable) -->
                        <DataGridTextColumn Header="Album" Binding="{Binding Model.Album, UpdateSourceTrigger=LostFocus}" Width="2*" EditingElementStyle="{StaticResource EditingTextStyle}"/>

                        <!-- Status -->
                        <DataGridTemplateColumn Header="Status" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left" Background="#22FFFFFF">
                                        <TextBlock Text="{Binding State}" FontSize="11" Foreground="#CCC"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Progress -->
                         <DataGridTemplateColumn Header="Progress" Width="100">
                             <DataGridTemplateColumn.CellTemplate>
                                 <DataTemplate>
                                     <Grid Height="4">
                                         <ProgressBar Value="{Binding Progress, Mode=OneWay}" Maximum="100" Height="4" BorderThickness="0" Background="#333" Foreground="#4CAF50"/>
                                     </Grid>
                                 </DataTemplate>
                             </DataGridTemplateColumn.CellTemplate>
                         </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
                
            </Grid>
        </Grid>
    </Grid>
</Page>