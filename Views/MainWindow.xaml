<Window x:Class="SLSKDONET.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SLSKDONET.Views"
    xmlns:converters="clr-namespace:SLSKDONET.Converters"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Soulseek Downloader"  
    Height="800" 
    Width="1200"
    WindowStartupLocation="CenterScreen"
    Background="#1E1E1E">

    <Window.InputBindings>
        <KeyBinding Key="R" Modifiers="Control" Command="{Binding RunDiagnosticsCommand}"/>
    </Window.InputBindings>
    
    <Grid x:Name="MainGrid" Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Global Progress Bar (Top of Window) -->
        <Border Grid.Row="0" Height="3" Background="#1E1E1E">
            <ProgressBar Value="{Binding DownloadProgressPercentage, Mode=OneWay, FallbackValue=0}" 
                         Maximum="100" 
                         Foreground="#4CAF50" 
                         Background="Transparent"
                         BorderThickness="0"
                         Height="3"/>
        </Border>

        <!-- Main Content Area with Simple Navigation Menu -->
        <Grid x:Name="RootContent" Grid.Row="1" Background="#1E1E1E">
            <!-- Column Definitions with direct bindings/converters would be ideal, but using Styles on the inner content is safer for Layout -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Navigation -->
                <ColumnDefinition Width="*"/>    <!-- Main Content -->
                <ColumnDefinition Width="Auto"/> <!-- Player -->
            </Grid.ColumnDefinitions>
            <!-- Navigation Sidebar -->
            <Border Grid.Column="0" Background="#181818" BorderBrush="#2A2A2A" BorderThickness="0,0,1,0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Width" Value="200"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsNavigationCollapsed}" Value="True">
                                <Setter Property="Width" Value="48"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                
                <!-- Border Width binding is REMOVED in favor of Column Width Trigggers -->
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Hamburger Toggle -->
                    <Button Grid.Row="0" Command="{Binding ToggleNavigationCommand}" 
                            Background="Transparent" BorderThickness="0" Foreground="#AAA"
                            HorizontalAlignment="Left" Margin="4,10,0,0" Padding="8" Cursor="Hand">
                        <TextBlock Text="â‰¡" FontSize="20"/>
                    </Button>

                    <!-- Nav Buttons -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <Button Command="{Binding NavigateSearchCommand}" Style="{StaticResource NavButtonStyle}" Margin="10,5" ToolTip="Search">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16" Width="24" TextAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Search" Margin="12,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsNavigationCollapsed, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Button>
                        <Button Command="{Binding NavigateLibraryCommand}" Style="{StaticResource NavButtonStyle}" Margin="10,5" ToolTip="Library">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ“š" FontSize="16" Width="24" TextAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Library" Margin="12,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsNavigationCollapsed, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Button>
                        <Button Command="{Binding NavigateDownloadsCommand}" Style="{StaticResource NavButtonStyle}" Margin="10,5" ToolTip="Downloads">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="â¬‡ï¸" FontSize="16" Width="24" TextAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Downloads" Margin="12,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsNavigationCollapsed, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Button>
                        <Button Command="{Binding NavigateToCommand}" CommandParameter="ImportHistory"
                                Content="ðŸ“œ History" Margin="10,5" ToolTip="Import History">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                    <Setter Property="Visibility" Value="{Binding IsNavigationCollapsed, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsNavigationCollapsed}" Value="True">
                                            <Setter Property="Content" Value="ðŸ“œ"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Command="{Binding NavigateSettingsCommand}" Style="{StaticResource NavButtonStyle}" Margin="10,5" ToolTip="Settings">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="âš™ï¸" FontSize="16" Width="24" TextAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Settings" Margin="12,0,0,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsNavigationCollapsed, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Frame for page content -->
            <Frame x:Name="RootFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="Transparent"/>
            
            <!-- Right Sidebar Placeholder (Music Player) -->
            <Border Grid.Column="2" Background="#222" BorderBrush="#333" BorderThickness="1,0,0,0" AllowDrop="True" Drop="Player_Drop"
                    Visibility="{Binding IsPlayerSidebarVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Button Command="{Binding TogglePlayerCommand}" HorizontalAlignment="Right" Margin="10" Background="Transparent" BorderThickness="0" Foreground="#888">
                        <TextBlock Text="âœ•" FontSize="14"/>
                    </Button>
                    
                    <Border Grid.Row="1" Background="#2A2A2A" Padding="15" Margin="15,0,15,10" CornerRadius="8" VerticalAlignment="Top">
                        <StackPanel>
                            <!-- Album Art / Icon -->
                            <Border Background="#333" CornerRadius="4" Height="120" Margin="0,0,0,15">
                                <TextBlock Text="ðŸŽµ" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#555"/>
                            </Border>

                            <!-- Track Info -->
                            <TextBlock Text="{Binding PlayerViewModel.TrackTitle}" 
                                       Foreground="White" FontWeight="SemiBold" FontSize="14" 
                                       TextTrimming="CharacterEllipsis" TextAlignment="Center" Margin="0,0,0,4"
                                       ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                            <TextBlock Text="{Binding PlayerViewModel.TrackArtist}" 
                                       Foreground="#A0A0A0" FontSize="12" 
                                       TextTrimming="CharacterEllipsis" TextAlignment="Center" Margin="0,0,0,15"/>

                            <!-- Progress & Time -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding PlayerViewModel.CurrentTimeStr}" Foreground="#888" FontSize="11"/>
                                <Slider Grid.Column="1" Margin="8,0" VerticalAlignment="Center"
                                        Minimum="0" Maximum="1" Value="{Binding PlayerViewModel.Position, Mode=TwoWay}"
                                        IsMoveToPointEnabled="True" Cursor="Hand"/>
                                <TextBlock Grid.Column="2" Text="{Binding PlayerViewModel.TotalTimeStr}" Foreground="#888" FontSize="11"/>
                            </Grid>

                            <!-- Controls -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                                <Button Command="{Binding PlayerViewModel.StopCommand}" ToolTip="Stop"
                                        Background="Transparent" BorderThickness="0" Padding="10" Cursor="Hand">
                                    <TextBlock Text="â¹" FontSize="16" Foreground="#DDD"/>
                                </Button>
                                <!-- Play/Pause -->
                                <Button Command="{Binding PlayerViewModel.TogglePlayPauseCommand}" ToolTip="Play/Pause"
                                        Background="#444" BorderThickness="0" Padding="0" Width="40" Height="40" Cursor="Hand" Margin="10,0">
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="20"/>
                                        </Style>
                                    </Button.Resources>
                                    <TextBlock Text="{Binding PlayerViewModel.IsPlaying, Converter={StaticResource BooleanToPlayPauseIconConverter}}" 
                                               FontSize="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                                <!-- Next (Future) -->
                                <Button IsEnabled="False" ToolTip="Next (Coming Soon)"
                                        Background="Transparent" BorderThickness="0" Padding="10">
                                    <TextBlock Text="â­" FontSize="16" Foreground="#555"/>
                                </Button>
                            </StackPanel>

                            <!-- Volume -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ”Š" FontSize="14" Foreground="#888" Margin="0,0,8,0"/>
                                <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="{Binding PlayerViewModel.Volume, Mode=TwoWay}"
                                        VerticalAlignment="Center" IsMoveToPointEnabled="True"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Grid.Row="1" Text="Queue Empty" Foreground="#444" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontStyle="Italic"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar with Connection Indicator -->
        <Border Grid.Row="2" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,1,0,0" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Connection Status Indicator (Left) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Margin="0,0,8,0"
                             Fill="{Binding IsConnected, Converter={StaticResource ConnectionStatusColorConverter}}"/>
                    <TextBlock Text="{Binding IsConnected, Converter={StaticResource ConnectionStatusTextConverter}}" 
                               Foreground="#A0A0A0" FontSize="11" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,12,0"/>
                    
                    <!-- Sign In button (only visible when disconnected) -->
                    <Button Content="ðŸ”‘ Sign In" 
                            Command="{Binding ShowLoginCommand}"
                            Background="#0E639C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,4"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="3"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1177BB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Disconnect button (only visible when connected) -->
                    <Button Content="ðŸ”Œ Disconnect" 
                            Command="{Binding DisconnectCommand}"
                            Background="#C63133"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,4"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="3"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E63A3E"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Status Message (Center) - temporary status like "Searching...", "Connecting..." -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusText, FallbackValue=''}" 
                           Foreground="#A0A0A0"
                           FontSize="12"
                           Margin="20,0,0,0"/>

                <!-- Download Progress (Right) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TodoCount, StringFormat='ðŸ“¥ {0} in progress'}" 
                               Foreground="#A0A0A0" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding SuccessfulCount, StringFormat='âœ“ {0} completed'}" 
                               Foreground="#A0A0A0" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding FailedCount, StringFormat='âœ— {0} failed'}" 
                               Foreground="#A0A0A0" FontSize="11"/>
                    
                    <!-- Separator -->
                    <Border Width="1" Height="14" Background="#404040" Margin="12,0,12,0" />

                    <!-- Player Toggle -->
                    <Button Command="{Binding TogglePlayerCommand}" ToolTip="Toggle Music Player"
                            Background="Transparent" BorderThickness="0" Padding="6,2" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŽµ" FontSize="14" Foreground="#A0A0A0" Margin="0,1,6,0"/>
                            <TextBlock Text="Player" FontSize="11" Foreground="#A0A0A0" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Login Overlay - ALWAYS visible on top when not connected -->
        <Grid x:Name="LoginOverlay" 
              Grid.Row="0" 
              Grid.RowSpan="2"
              Panel.ZIndex="1000"
              Background="#DD000000">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoginOverlayVisible, FallbackValue=True}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!-- Centered login card -->
            <Border x:Name="LoginCard" 
                    Background="#252526" 
                    CornerRadius="8" 
                    Padding="32"
                    Width="420"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    BorderBrush="#404040"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Sign in to Soulseek" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,24" 
                               HorizontalAlignment="Center"/>

                    <Label Content="Username" 
                           Foreground="#A0A0A0" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,6"/>
                    <TextBox Text="{Binding Username, Mode=TwoWay}" 
                             Background="#2D2D2D"
                             Foreground="White"
                             BorderBrush="#404040"
                             Padding="12,8"
                             FontSize="14"
                             Margin="0,0,0,16"/>

                    <Label Content="Password" 
                           Foreground="#A0A0A0" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,6"/>
                    <PasswordBox x:Name="OverlayPasswordBox" 
                                 Background="#2D2D2D"
                                 Foreground="White"
                                 BorderBrush="#404040"
                                 Padding="12,8"
                                 FontSize="14"
                                 Margin="0,0,0,16"/>

                    <CheckBox Content="Remember Password" 
                              IsChecked="{Binding RememberPassword, Mode=TwoWay}" 
                              Foreground="White"
                              Margin="0,0,0,12"/>

                    <CheckBox Content="Auto-Connect on startup" 
                              IsChecked="{Binding AutoConnectEnabled, Mode=TwoWay}" 
                              Foreground="White"
                              Margin="0,0,0,20"/>

                     <Button x:Name="SignInButton"
                            Content="Sign In" 
                            Click="SignInButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Height="44"
                            FontSize="14"
                            FontWeight="SemiBold"
                            IsDefault="True"/>
                    
                    <Button Content="Maybe Later" 
                            Command="{Binding DismissLoginCommand}"
                            Background="Transparent" 
                            Foreground="#A0A0A0" 
                            FontSize="12"
                            BorderThickness="0" 
                            Padding="0,12"
                            Margin="0,8,0,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#A0A0A0"
                                          HorizontalAlignment="Center"
                                          TextDecorations="Underline">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
